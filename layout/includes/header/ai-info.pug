- let pageFillDescription = page.description
- let gptName = theme.post_head_ai_description.gptName
- let mode = theme.post_head_ai_description.mode
- let switchBtn = theme.post_head_ai_description.switchBtn
if (pageFillDescription)
  .post-ai-description
    .ai-title
      i.fa-solid.fa-newspaper
      .ai-title-text AI-摘要
      if (switchBtn)
        #ai-Toggle 切换
      i.fa-solid.fa-arrow-rotate-right(title="刷新摘要" style="margin-right: 10px;")
      i.fa-solid.fa-podcast(title="朗读摘要")
      #ai-tag
        if mode == "tianli"
          = "Tianli GPT"
        else
          = gptName + " GPT"
    .ai-explanation AI初始化中...
    .ai-btn-box
      .ai-btn-item 介绍自己 🙈
      .ai-btn-item 生成本文简介 👋
      .ai-btn-item 推荐相关文章 📖
      .ai-btn-item 前往主页 🏠
      .ai-btn-item#go-tianli-blog 前往爱发电购买
    script(data-pjax src=url_for(theme.asset.ai_abstract_js))
