nav#nav
  //- span#blog_name
  //-   a#site-name(href=url_for('/')) #[=config.title]
  - var pagedescr = page.description ? page.description : "CC的部落格欢迎您的光临"
  - var subtitle = page.subtitle ? page.subtitle : "CC's Blog"
  if is_page() || is_post() || is_category() || is_tag()
    span#blog_name
      a#site-name(href=url_for('/') data-title=pagedescr) #[=subtitle]
  else if is_home()
    span#blog_name
      a#site-name(onclick='btf.scrollToDest(0, 500)' data-title=pagedescr) #[=subtitle]
  else if is_archive()
    span#blog_name
      a#site-name(href=url_for('/') data-title=pagedescr) #[='Archives']
  #menus
    #toggle-menu
      a.site-page
        i.fas.fa-bars.fa-fw
    !=partial('includes/header/menu_item', {}, {cache: true})
    if (theme.algolia_search.enable || theme.local_search.enable)
      #search-button
        a.site-page.social-icon.search
          i.fas.fa-search.fa-fw
          span=' '+_p('search')