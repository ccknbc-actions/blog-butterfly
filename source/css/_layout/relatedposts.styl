.relatedPosts
  margin-top: 2rem

  & > .headline
    margin-bottom: 5px
    font-weight: 700
    font-size: 1.43em

  & > .relatedPosts-list
    & > div
      position: relative
      display: inline-block
      overflow: hidden
      margin: 3px
      width: calc(33.333% - 6px)
      height: 200px
      background: $dark-black
      vertical-align: bottom

      &:hover
        .cover
          opacity: .8
          transform: scale(1.1)

      +maxWidth768()
        margin: 2px
        width: calc(50% - 4px)
        height: 150px

      +maxWidth600()
        width: calc(100% - 4px)

    .cover
      width: 100%
      height: 100%
      opacity: .4
      transition: all .6s
      object-fit: cover

    .content
      position: absolute
      top: 50%
      padding: 0 1rem
      width: 100%
      transform: translate(0, -50%)

      .date
        color: var(--light-grey)
        font-size: 90%

      .title
        @extend .limit-more-line
        color: var(--white)
        -webkit-line-clamp: 2
