nav#nav
  - var pagedescr = page.description ? page.description : "CC的部落格 欢迎您的光临"
  - var subtitle = page.subtitle ? page.subtitle : "CC's Blog"
  if is_home()
    span#blog_name
      a#site-name(onclick='btf.scrollToDest(0, 500)' data-title=pagedescr) #[=subtitle]
  else if is_archive()
    span#blog_name
      a#site-name(href=url_for('/') data-title='CC的部落格 文章归档页') #[='Archives']
  else if is_current('/404')
    span#blog_name
      a#site-name(href=url_for('/') data-title='CC的部落格 404页面') #[='404 Not Found']
  else
    span#blog_name
      a#site-name(href=url_for('/') data-title=pagedescr) #[=subtitle]
  #menus
    //- a.site-page#wzayd.wzayd(title='盲人朋友在线浏览按住Alt+g键，体验无障碍阅读' href='javascript:;' accesskey='g')
    //-   i.fa-solid.fa-wheelchair
    //-   span=' '+_p('无障碍')
    a.site-page.toRandomPost(title='随机浏览一篇文章' href='javascript:toRandomPost();' accesskey='g')
      i.fa-solid.fa-shuffle
    if (theme.algolia_search.enable || theme.local_search.enable)
      #search-button
        a.site-page.social-icon.search
          i.fa-solid.fa-search
          span=' '+_p('search.title')
    !=partial('includes/header/menu_item', {}, {cache: true})

    #toggle-menu
      a.site-page
        i.fa-solid.fa-bars


